<div class='container-fluid'>
		<nav class="navbar navbar-light bg-light">
				<h3>!Instagram!</h3>
				<div class='row text-center'>
						<div class='col-4'>
								<p><%= link_to 'New post', new_instagram_posts_path %></p>
						</div>
						<div class='col-4'>
								<p><%= link_to 'New Video Post', new_instagram_videos_path %></p>
						</div>
						<div class='col-4'>
								<p><%= link_to 'New Text Post', new_instagram_texts_path %></p>
						</div>
				</div>
		</nav>
		<div class='card text-center'>
				<div class='row'>
						<div class='col-4'>
								<div class='card-header'>Post</div>
								<% @instagram_all.each do |post| %>
								    <%= image_tag(post.image_url, size: "250x250")%>
								    <p>
								    	<strong><%= post.name %>: </strong>
								    	<%= post.caption %>
								    </p>
								    <p><%= link_to 'Show', instagram_post_path(post) %> || <%= link_to 'Edit', edit_post_instagram_path(post) %> || <%= link_to 'Destroy', instagram_post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete the post?' } %></p>
								<% end %>
						</div>
						<div class='col-4'>
								<div class='card-header'>Video</div>
								<% @instagram_video_all.each do |video| %>
										<h3><%= video.title %></h3>
										<iframe width="400" height="250" src="https://www.youtube.com/embed/<%= video.video_key %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
										<p>
										  <strong><%=video.name %>: </strong>
										  <%= video.caption %>
										</p>
										<p><%= link_to 'Show', instagram_video_path(video) %> || <%= link_to 'Edit', edit_video_instagram_path(video) %> || <%= link_to 'Destroy', instagram_video_path(video), method: :delete, data: { confirm: 'Are you sure you want to delete this video?' } %></p>
								<% end %>
						</div>
						<div class='col-4'>
								<div class='card-header'>Text</div>
								<% @instagram_text_all.each do |text| %>
										<p><strong>Title: <%=text.title %></strong></p>
										<p>
											<strong><%= text.name%></strong><br>
										  <%= text.text %>
										</p>
										<p><%= link_to 'Show', instagram_text_path(text) %> || <%= link_to 'Edit', edit_text_instagram_path(text) %> || <%= link_to 'Destroy', instagram_text_path(text), method: :delete, data: { confirm: 'Are you sure you want to delete this text?' } %></p>
								<% end %>
						</div>
				</div>
		</div>
</div>