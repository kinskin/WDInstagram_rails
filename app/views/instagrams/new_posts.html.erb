<h1>Add new post page</h1>

<%= form_with scope: :instagrams, url: instagrams_posts_path, local: true do |form| %>
	  <p>
	    <%= form.label :name %><br>
	    <%= form.text_field :name %>
	  </p>

	  <p>
	    <%= form.label :image_url %><br>
	    <%= form.text_field :image_url %>
	  </p>

	  <p>
	    <%= form.label :caption %><br>
	    <%= form.text_area :caption %>
	  </p>

	  <p>
	    <%= form.submit :post %>
	  </p>
<% end %>

<%= link_to 'Back', root_path %>