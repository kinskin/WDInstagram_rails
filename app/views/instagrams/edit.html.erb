<h1>Edit Instagram Post</h1>

<%= form_with scope: :instagram, model: @instagram_edit, local: true do |form| %>

  	<p>
	    <%= form.label :name %><br>
	    <%= form.text_field :name %>
	  </p>

	  <p>
	    <%= form.label :photo_url %><br>
	    <%= form.text_field :photo_url %>
	  </p>

	  <p>
	    <%= form.label :title %><br>
	    <%= form.text_field :title %>
	  </p>

	  <p>
	    <%= form.label :caption %><br>
	    <%= form.text_area :caption %>
	  </p>

  <p>
    <%= form.submit :edit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>